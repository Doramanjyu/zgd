{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
  ],
  "schedule": [
    "before 9am on the first day of the month"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^@typescript-eslint",
        "^eslint$",
        "^prettier$"
      ],
      "groupName": "Node formatter and linter"
    }
  ]
}
